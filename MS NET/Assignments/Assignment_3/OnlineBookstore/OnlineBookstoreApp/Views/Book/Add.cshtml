@model OnlineBookstoreApp.Models.Book

<h2>Add a New Book</h2>

<form asp-action="Add" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Author"></label>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="PublishedDate"></label>
        <input asp-for="PublishedDate" type="date" />
        <span asp-validation-for="PublishedDate"></span>
    </div>
    <button type="submit">Add Book</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
